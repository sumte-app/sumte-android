<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/border_only_bottom"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/item_review_cl"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:paddingBottom="20dp"
        android:paddingTop="20dp"
        app:layout_constraintWidth_percent="0.9"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent">
        <TextView
            android:id="@+id/item_review_title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="제주 고고애월 게스트 하우스"
            android:textSize="14sp"
            android:fontFamily="@font/pretendard_semibold"
            android:textColor="@color/gray900"
            app:layout_constraintStart_toStartOf="@+id/item_review_cl"
            app:layout_constraintTop_toTopOf="@+id/item_review_cl"/>
        <ImageView
            android:id="@+id/item_review_titlearrow_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:src="@drawable/arrow_right"
            android:layout_gravity="center_vertical"
            app:layout_constraintStart_toEndOf="@+id/item_review_title_tv"
            app:layout_constraintTop_toTopOf="@+id/item_review_title_tv"
            app:layout_constraintBottom_toBottomOf="@+id/item_review_title_tv"/>
        <TextView
            android:id="@+id/item_review_subtitle_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="여자도미토리 (최대 4인실 입실 가능)"
            android:textSize="12sp"
            android:fontFamily="@font/pretendard_regular"
            android:textColor="@color/gray400"
            app:layout_constraintStart_toStartOf="@+id/item_review_title_tv"
            app:layout_constraintTop_toBottomOf="@+id/item_review_title_tv"/>

        <ImageView
            android:id="@+id/item_review_star1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:src="@drawable/star_fill"
            app:layout_constraintBottom_toBottomOf="@+id/item_review_subtitle_tv"
            app:layout_constraintStart_toEndOf="@+id/item_review_subtitle_tv"
            app:layout_constraintTop_toTopOf="@+id/item_review_subtitle_tv" />
        <ImageView
            android:id="@+id/item_review_star2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/star_fill"
            app:layout_constraintStart_toEndOf="@+id/item_review_star1"
            app:layout_constraintTop_toTopOf="@+id/item_review_star1"/>
        <ImageView
            android:id="@+id/item_review_star3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/star_fill"
            app:layout_constraintStart_toEndOf="@+id/item_review_star2"
            app:layout_constraintTop_toTopOf="@+id/item_review_star2"/>
        <ImageView
            android:id="@+id/item_review_star4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/star_fill"
            app:layout_constraintStart_toEndOf="@+id/item_review_star3"
            app:layout_constraintTop_toTopOf="@+id/item_review_star3"/>
        <ImageView
            android:id="@+id/item_review_star5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/star_fill"
            app:layout_constraintStart_toEndOf="@+id/item_review_star4"
            app:layout_constraintTop_toTopOf="@+id/item_review_star4"/>

        <TextView
            android:id="@+id/item_review_date_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2024.11.03"
            android:textSize="12sp"
            android:fontFamily="@font/pretendard_regular"
            android:textColor="@color/gray300"
            app:layout_constraintEnd_toEndOf="@+id/item_review_cl"
            app:layout_constraintBottom_toBottomOf="@+id/item_review_star5"/>
        <LinearLayout
            android:id="@+id/review_image_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            app:layout_constraintTop_toBottomOf="@id/item_review_subtitle_tv"
            app:layout_constraintStart_toStartOf="@+id/item_review_subtitle_tv">
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/review_image_rv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="10dp"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"/>
        </LinearLayout>
        <TextView
            android:id="@+id/item_review_content_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="즐겁게 놀다 갑니다~~"
            android:textSize="14sp"
            android:fontFamily="@font/pretendard_regular"
            android:textColor="@color/gray800"
            app:layout_constraintTop_toBottomOf="@+id/review_image_container"
            app:layout_constraintStart_toStartOf="@+id/review_image_container"/>

        <ImageView
            android:id="@+id/item_review_edit_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/edit"
            android:layout_marginEnd="40dp"
            app:layout_constraintTop_toTopOf="@+id/item_review_trash_iv"
            app:layout_constraintBottom_toBottomOf="@+id/item_review_trash_iv"
            app:layout_constraintEnd_toStartOf="@+id/item_review_trash_iv"/>
        <TextView
            android:id="@+id/item_review_edit_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="수정"
            android:textSize="12sp"
            android:fontFamily="@font/pretendard_semibold"
            android:textColor="@color/gray500"
            app:layout_constraintStart_toEndOf="@+id/item_review_edit_iv"
            app:layout_constraintTop_toTopOf="@+id/item_review_edit_iv"
            app:layout_constraintBottom_toBottomOf="@+id/item_review_edit_iv"/>
        <ImageView
            android:id="@+id/item_review_trash_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/trash"
            android:layout_marginTop="20dp"
            app:layout_constraintEnd_toStartOf="@+id/item_review_delete_tv"
            app:layout_constraintTop_toBottomOf="@+id/item_review_content_tv"/>
        <TextView
            android:id="@+id/item_review_delete_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="삭제"
            android:fontFamily="@font/pretendard_semibold"
            android:textColor="@color/gray500"
            android:textSize="12sp"
            app:layout_constraintEnd_toEndOf="@+id/item_review_cl"
            app:layout_constraintBottom_toBottomOf="@+id/item_review_trash_iv"
            app:layout_constraintTop_toTopOf="@id/item_review_trash_iv"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>