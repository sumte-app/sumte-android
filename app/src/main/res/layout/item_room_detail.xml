<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="254dp"
    >


    <ImageView
        android:id="@+id/ivRoomImage"
        android:layout_width="0dp"
        android:layout_height="140dp"
        android:scaleType="centerCrop"
        android:src="@drawable/sumte_main_logo"
        android:background="@drawable/calendar_round_style"
        android:clipToOutline="true"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />


    <TextView
        android:id="@+id/tvRoomName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="남자 도미토리 4인"
        android:fontFamily="@font/pretendard_semibold"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/ivRoomImage"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />


    <TextView
        android:id="@+id/tvRoomCapacity"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="기준인원 4인 (정원 8인)"
        android:fontFamily="@font/pretendard_regular"
        android:textColor="@color/gray900"
        android:drawableStart="@drawable/profile"
        android:drawablePadding="4dp"
        android:textSize="14sp"
        android:layout_marginTop="4dp"
        app:layout_constraintTop_toBottomOf="@id/tvRoomName"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />


    <TextView
        android:id="@+id/tvCheckInOut"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="체크인 17:00 · 체크아웃 11:00"
        android:fontFamily="@font/pretendard_regular"
        android:textColor="@color/gray900"
        android:drawableStart="@drawable/clock"
        android:drawablePadding="4dp"
        android:textSize="14sp"
        android:layout_marginTop="2dp"
        app:layout_constraintTop_toBottomOf="@id/tvRoomCapacity"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />


    <TextView
        android:id="@+id/ivReserve"
        android:layout_width="88dp"
        android:layout_height="38dp"
        android:text="예약하기"
        android:textSize="14sp"
        android:gravity="center"
        android:fontFamily="@font/pretendard_regular"
        android:textColor="@android:color/white"
        android:background="@drawable/btn_reserve_background"
        app:layout_constraintTop_toBottomOf="@id/tvRoomCapacity"
        app:layout_constraintEnd_toEndOf="parent"
        />


    <TextView
        android:id="@+id/tvRoomPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="28,000원"
        android:fontFamily="@font/pretendard_semibold"
        android:textSize="18sp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/ivRoomImage"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <TextView
        android:id="@+id/tvRoomDetail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="상세보기"
        android:textColor="@color/primary"
        android:fontFamily="@font/pretendard_regular"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/arrow_right_primary"
        app:layout_constraintStart_toEndOf="@id/tvRoomDetail"
        app:layout_constraintBottom_toBottomOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>
