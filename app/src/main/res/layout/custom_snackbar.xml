<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="16dp"
    android:background="@android:color/transparent">

    <TextView
        android:id="@+id/snackbar_text_liked_tv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:textColor="@android:color/white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/snackbar_action_cancel_tv"
        app:layout_constraintHorizontal_weight="1"
        android:text="찜 목록에서 삭제했어요."
        android:fontFamily="@font/pretendard_regular"
        />

    <TextView
        android:id="@+id/snackbar_action_cancel_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingStart="8dp"
        android:textColor="@android:color/white"
        app:layout_constraintStart_toEndOf="@id/snackbar_text_liked_tv"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:fontFamily="@font/pretendard_regular"
        android:text="실행 취소" />
</androidx.constraintlayout.widget.ConstraintLayout>