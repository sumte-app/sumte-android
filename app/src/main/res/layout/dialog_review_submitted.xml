<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="282dp"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="12dp"
    android:background="@drawable/round_style_search_result_empty">

    <TextView
        android:id="@+id/review_submitted_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="후기가 등록되었습니다."
        android:textColor="@color/gray900"
        android:fontFamily="@font/pretendard_semibold"
        android:textSize="16sp"
        android:gravity="center"
        android:paddingBottom="12dp"/>

    <TextView
        android:id="@+id/review_submitted_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/review_submitted"
        android:textColor="@color/gray500"
        android:textSize="14sp"
        android:fontFamily="@font/pretendard_regular"
        android:gravity="center"
        android:paddingBottom="12dp"/>

    <TextView
        android:id="@+id/review_submitted_apply_tv"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:text="확인"
        android:textSize="14sp"
        android:fontFamily="@font/pretendard_semibold"
        android:textColor="@color/white"
        android:gravity="center"
        android:background="@drawable/round_style_apply"/>
</LinearLayout>
