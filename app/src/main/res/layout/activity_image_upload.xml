<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:fitsSystemWindows="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:padding="20dp">

        <EditText
            android:id="@+id/fileNameEt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="파일 이름 (예: test.jpg)" />

        <EditText
            android:id="@+id/contentTypeEt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Content-Type (예: image/jpeg)" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/uploadBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/round_style_apply"
            android:layout_marginTop="10dp"
            android:text="이미지 업로드"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/resultUrlTv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="20dp"
            android:text="S3 URL 결과" />
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>