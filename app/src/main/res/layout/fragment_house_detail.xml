<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@color/white"
    android:fitsSystemWindows="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/clHeaderBar"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline_start"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.05" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline_end"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_begin="391dp" />

            <ImageView
                android:id="@+id/ivBack"
                android:layout_width="8dp"
                android:layout_height="16dp"
                android:src="@drawable/arrow_left"
                app:layout_constraintStart_toStartOf="@id/guideline_start"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" />

            <ImageView
                android:id="@+id/homeIcon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/home"
                app:layout_constraintEnd_toStartOf="@id/shareIcon"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginEnd="12dp" />

            <ImageView
                android:id="@+id/shareIcon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/share"
                app:layout_constraintEnd_toEndOf="@id/guideline_end"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <!-- clTop -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/clTop"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            app:layout_constraintTop_toBottomOf="@id/clHeaderBar"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <androidx.viewpager2.widget.ViewPager2
                android:id="@+id/vpHouseImage"
                android:layout_width="0dp"
                android:layout_height="200dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tvPageIndicator"
                android:layout_width="38dp"
                android:layout_height="24dp"
                android:text="1 | 5"
                android:fontFamily="@font/pretendard_regular"
                android:textColor="@color/gray400"
                android:background="@drawable/indicator_background"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="10dp"
                android:gravity="center_horizontal" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <!-- clHouseInfo -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/clHouseInfo"
            android:layout_width="0dp"
            android:layout_height="112dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/clTop"
            android:paddingTop="20dp"
            android:paddingBottom="20dp"
            app:layout_constraintWidth_percent="0.9">

            <TextView
                android:id="@+id/tvTitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="제주 월터 365 게스트 하우스"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/ivLike"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/heart"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="1dp" />

            <ImageView
                android:id="@+id/ivHouseDetailStar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/star_fill"
                android:layout_marginTop="2dp"
                app:layout_constraintStart_toStartOf="@id/tvTitle"
                app:layout_constraintTop_toBottomOf="@id/tvTitle" />

            <TextView
                android:id="@+id/tvReview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="4.4"
                android:textSize="14sp"
                android:layout_marginStart="3dp"
                app:layout_constraintStart_toEndOf="@id/ivHouseDetailStar"
                app:layout_constraintTop_toTopOf="@id/ivHouseDetailStar"
                app:layout_constraintBottom_toBottomOf="@+id/ivHouseDetailStar"
                android:layout_marginTop="4dp" />

            <TextView
                android:id="@+id/tvOpenBrace"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="3dp"
                android:text="("
                android:textSize="14sp"
                android:textColor="@color/gray400"
                app:layout_constraintStart_toEndOf="@id/tvReview"
                app:layout_constraintTop_toTopOf="@id/ivHouseDetailStar"
                app:layout_constraintBottom_toBottomOf="@+id/ivHouseDetailStar"
                android:layout_marginTop="4dp" />
            <TextView
                android:id="@+id/tvReviewCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="215"
                android:textSize="14sp"
                android:textColor="@color/gray400"
                app:layout_constraintStart_toEndOf="@id/tvOpenBrace"
                app:layout_constraintTop_toTopOf="@id/ivHouseDetailStar"
                app:layout_constraintBottom_toBottomOf="@+id/ivHouseDetailStar"
                android:layout_marginTop="4dp" />
            <TextView
                android:id="@+id/tvCloseBrace"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=")"
                android:textSize="14sp"
                android:textColor="@color/gray400"
                app:layout_constraintStart_toEndOf="@id/tvReviewCount"
                app:layout_constraintTop_toTopOf="@id/ivHouseDetailStar"
                app:layout_constraintBottom_toBottomOf="@+id/ivHouseDetailStar"
                android:layout_marginTop="4dp" />
            <ImageView
                android:id="@+id/ivHouseAllReview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/arrow_right"
                android:layout_marginStart="5dp"
                app:layout_constraintStart_toEndOf="@id/tvCloseBrace"
                app:layout_constraintTop_toTopOf="@id/tvCloseBrace"
                app:layout_constraintBottom_toBottomOf="@+id/tvCloseBrace"/>

            <TextView
                android:id="@+id/tvLocation"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="제주 제주시 애월읍 고내로13길 83 A동"
                android:fontFamily="@font/pretendard_regular"
                android:textColor="@color/gray400"
                app:layout_constraintTop_toBottomOf="@id/tvReview"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="2dp" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <View
            android:id="@+id/vDividerHouseInfo"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@drawable/divider"
            app:layout_constraintTop_toBottomOf="@id/clHouseInfo"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>


        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/clReservationInfo"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/clHouseInfo"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="20dp"
            app:layout_constraintWidth_percent="0.9">

            <LinearLayout
                android:id="@+id/date_change_bar"
                android:layout_width="185dp"
                android:layout_height="44dp"
                android:background="@drawable/round_style_search_result_empty"
                android:gravity="center_vertical"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginStart="10dp"
                    android:src="@drawable/calendar_check" />

                <TextView
                    android:id="@+id/start_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:text="6.18 수"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/to"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:text="-"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/end_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:text="6.19 목"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/date_comma"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:text=","
                    android:textSize="12sp"
                    android:visibility="visible" />

                <TextView
                    android:id="@+id/date_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:text="1박"
                    android:textSize="12sp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/count_change_bar"
                android:layout_width="135dp"
                android:layout_height="44dp"
                android:background="@drawable/round_style_search_result_empty"
                android:gravity="center_vertical"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginStart="10dp"
                    android:src="@drawable/bottom_nav_my" />

                <TextView
                    android:id="@+id/adult_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:text="성인 1"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/count_comma"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:text=","
                    android:textSize="12sp"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/child_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:text="아동 1"
                    android:textSize="12sp" />
            </LinearLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>


        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvInfo"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/clReservationInfo"
            app:layout_constraintWidth_percent="0.9"
            android:overScrollMode="never"
            android:nestedScrollingEnabled="false" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/clReviewSection"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/rvInfo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintWidth_percent="0.9">

        <TextView
            android:id="@+id/tvReviewScore"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="4.4 (215)"
            android:textStyle="bold"
            android:textSize="16sp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <LinearLayout
            android:id="@+id/llSeeAllReviews"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintTop_toTopOf="@id/tvReviewScore"
            app:layout_constraintEnd_toEndOf="parent">

            <TextView
                android:id="@+id/tvSeeAllReviews"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="전체보기"
                android:textSize="12sp"
                android:textColor="@color/gray500" />

            <ImageView
                android:id="@+id/ivArrowRight"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@drawable/arrow_right" />
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvReviewList"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:overScrollMode="never"
            android:nestedScrollingEnabled="false"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@id/clReviewSection"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintWidth_percent="0.9"
            android:layout_marginTop="12dp"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>
