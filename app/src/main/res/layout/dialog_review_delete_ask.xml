<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="282dp"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="12dp"
    android:background="@drawable/round_style_search_result_empty">

    <TextView
        android:id="@+id/review_submitted_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="후기를 삭제할까요?"
        android:textColor="@color/gray900"
        android:textStyle="bold"
        android:textSize="16sp"
        android:gravity="center"
        android:paddingBottom="12dp"/>

    <TextView
        android:id="@+id/review_submitted_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/review_delete_ask"
        android:textColor="@color/gray500"
        android:textSize="14sp"
        android:gravity="center"
        android:paddingBottom="12dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="10"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/review_delete_cancel_tv"
            android:layout_width="0dp"
            android:layout_height="44dp"
            android:layout_weight="4.8"
            android:text="취소"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="@color/primary"
            android:gravity="center"
            android:background="@drawable/round_style"/>
        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="0.4" />
        <TextView
            android:id="@+id/review_delete_confirm_tv"
            android:layout_width="0dp"
            android:layout_height="44dp"
            android:layout_weight="4.8"
            android:layout_gravity="end"
            android:text="삭제"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:gravity="center"
            android:background="@drawable/round_style_apply"/>
    </LinearLayout>
</LinearLayout>