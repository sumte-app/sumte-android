<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingTop="104dp"
    android:background="@color/white">

    <TextView
        android:id="@+id/phone_input_titleText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="휴대폰 번호를 입력해주세요"
        android:textSize="22sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="24dp"
        app:layout_constraintWidth_percent="0.9" />

    <TextView
        android:id="@+id/phone_input_subtitleText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="휴대폰 번호"
        android:textSize="12sp"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toBottomOf="@id/phone_input_titleText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintWidth_percent="0.9" />

    <EditText
        android:id="@+id/phone_input_editText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="010-0000-0000"
        android:maxLength="13"
        android:inputType="phone"
        android:paddingTop="18dp"
        android:paddingBottom="18dp"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:background="@drawable/input_field_selector"
        android:textSize="16sp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/phone_input_subtitleText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintWidth_percent="0.9" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnSendVerification"
        android:layout_width="0dp"
        android:layout_height="52dp"
        android:text="인증번호 전송"
        android:textColor="@android:color/white"
        android:background="@drawable/login_button_unable"
        android:enabled="false"
        android:layout_marginBottom="32dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintWidth_percent="0.9" />

</androidx.constraintlayout.widget.ConstraintLayout>
