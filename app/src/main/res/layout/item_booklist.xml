<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="20dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/booked_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2024.11.03 (일)"
        android:textSize="16sp"
        android:fontFamily="@font/pretendard_semibold"
        android:layout_marginStart="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="D-2"
        android:textSize="16sp"
        android:textColor="@color/primary"
        android:fontFamily="@font/pretendard_semibold"
        android:layout_marginStart="10dp"
        app:layout_constraintStart_toEndOf="@id/booked_date"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/booked_date"/>
    <LinearLayout
        android:id="@+id/detail_box"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginEnd="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/booked_date">
        <TextView
            android:id="@+id/detail_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="상세보기"
            android:textSize="12sp"
            android:textColor="@color/gray600"
            android:fontFamily="@font/pretendard_regular"
            android:layout_marginEnd="10dp"
            app:layout_constraintEnd_toStartOf="@id/detail_arrow"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="@id/booked_date"/>
        <ImageView
            android:id="@+id/detail_arrow"
            android:layout_width="8dp"
            android:layout_height="16dp"
            android:src="@drawable/arrow_right"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="@id/detail_btn"/>

    </LinearLayout>

    <ImageView
        android:id="@+id/detail_img"
        android:layout_width="92dp"
        android:layout_height="92dp"
        android:layout_marginTop="15dp"
        android:src="@drawable/sumte_main_logo"
        app:layout_constraintStart_toStartOf="@+id/booked_date"
        app:layout_constraintTop_toBottomOf="@+id/booked_date" />

    <TextView
        android:id="@+id/house_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="제주 끌림 365 게스트하우스"
        android:textSize="16sp"
        android:fontFamily="@font/pretendard_semibold"
        app:layout_constraintStart_toEndOf="@+id/detail_img"
        app:layout_constraintTop_toTopOf="@+id/detail_img" />

    <TextView
        android:id="@+id/room_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="여자도미토리(4인)"
        android:textSize="14sp"
        android:fontFamily="@font/pretendard_regular"
        app:layout_constraintStart_toStartOf="@+id/house_name"
        app:layout_constraintTop_toBottomOf="@+id/house_name" />

    <LinearLayout
        android:id="@+id/selected_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@+id/selected_count"
        app:layout_constraintStart_toStartOf="@+id/house_name">

        <ImageView
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:src="@drawable/calendar_check" />

        <TextView
            android:id="@+id/start_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="6.18 수"
            android:fontFamily="@font/pretendard_regular"
            android:layout_marginStart="4dp"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/to"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="-"
            android:fontFamily="@font/pretendard_regular"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/end_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="6.19 목"
            android:fontFamily="@font/pretendard_regular"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/date_comma"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:text=","
            android:fontFamily="@font/pretendard_regular"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/date_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:text="1박"
            android:fontFamily="@font/pretendard_regular"
            android:textSize="12sp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/selected_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="@+id/detail_img"
        app:layout_constraintStart_toStartOf="@+id/house_name">

        <ImageView
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:src="@drawable/bottom_nav_my" />

        <TextView
            android:id="@+id/adult_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:text="성인 1"
            android:fontFamily="@font/pretendard_regular"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/count_comma"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:text=","
            android:textSize="12sp"
            android:fontFamily="@font/pretendard_regular"
            android:visibility="gone" />

        <TextView
            android:id="@+id/child_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:text=""
            android:fontFamily="@font/pretendard_regular"
            android:textSize="12sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/review_btn"
        android:layout_width="0dp"
        android:layout_height="44dp"
        android:background="@drawable/round_style"
        android:gravity="center"
        android:layout_marginTop="10dp"
        app:layout_constraintWidth_percent="0.9"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/detail_img">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="후기 작성"
            android:fontFamily="@font/pretendard_regular"
            android:textColor="@color/primary"/>

    </LinearLayout>


    <View
        android:id="@+id/vDividerHouseInfo"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@drawable/divider"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/review_btn"/>
    
</androidx.constraintlayout.widget.ConstraintLayout>