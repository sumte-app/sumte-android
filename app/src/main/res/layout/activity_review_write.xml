<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:fitsSystemWindows="true"
    android:focusable="true"
    android:focusableInTouchMode="true">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/review_write_header"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@drawable/border_only_bottom"
        app:layout_constraintHeight_percent="0.06"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:gravity="center">
        <ImageView
            android:id="@+id/review_write_cancel_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/cancel"
            android:layout_marginStart="16dp"
            app:layout_constraintTop_toTopOf="@+id/review_write_header"
            app:layout_constraintBottom_toBottomOf="@+id/review_write_header"
            app:layout_constraintStart_toStartOf="parent" />
        <TextView
            android:id="@+id/review_write_title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="후기 작성"
            android:textColor="@color/gray900"
            android:textStyle="bold"
            android:textSize="16sp"
            app:layout_constraintStart_toEndOf="@+id/review_write_cancel_iv"
            app:layout_constraintTop_toTopOf="@+id/review_write_cancel_iv"
            app:layout_constraintBottom_toBottomOf="@+id/review_write_cancel_iv"
            app:layout_constraintEnd_toStartOf="@+id/review_empty_view"/>
        <View
            android:id="@+id/review_empty_view"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginEnd="50dp"
            app:layout_constraintTop_toTopOf="@+id/review_write_header"
            app:layout_constraintEnd_toEndOf="@+id/review_write_header"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <LinearLayout
        android:id="@+id/review_rating_ll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@+id/review_write_header"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:gravity="center">
        <ImageView
            android:id="@+id/star_empty1_iv"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/star_empty"/>
        <ImageView
            android:id="@+id/star_empty2_iv"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/star_empty"/>
        <ImageView
            android:id="@+id/star_empty3_iv"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/star_empty"/>
        <ImageView
            android:id="@+id/star_empty4_iv"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/star_empty"/>
        <ImageView
            android:id="@+id/star_empty5_iv"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/star_empty"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/review_pic_add_ll"
        android:layout_width="0dp"
        android:layout_height="44dp"
        android:layout_marginTop="30dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:background="@drawable/round_style"
        app:layout_constraintWidth_percent="0.9"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/review_rating_ll">
        <ImageView
            android:id="@+id/review_pic_add_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/camera_icon"/>
        <TextView
            android:id="@+id/review_pic_add_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:text="사진 추가"
            android:textColor="@color/primary"
            android:textSize="14sp"
            android:textStyle="bold"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/review_pic_show_ll"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="12dp"
        app:layout_constraintWidth_percent="0.9"
        app:layout_constraintHeight_percent="0.2"
        android:orientation="vertical"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="@+id/review_pic_add_ll"
        app:layout_constraintTop_toBottomOf="@+id/review_pic_add_ll">
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/review_pic_show_rv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:overScrollMode="never"
            android:scrollbars="none"
            app:layout_constraintStart_toStartOf="@+id/review_pic_add_ll"
            app:layout_constraintTop_toBottomOf="@+id/review_pic_add_ll"
            app:layout_constraintWidth_percent="0.9" />
    </LinearLayout>

    <EditText
        android:id="@+id/review_content_et"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="20dp"
        android:hint="@string/review_write_hint"
        android:textColorHint="@color/gray500"
        android:textStyle="normal"
        android:textSize="14sp"
        android:textColor="@color/gray500"
        android:padding="16dp"
        android:gravity="top|start"
        android:background="@drawable/round_style_review_default"
        android:clickable="true"
        app:layout_constraintHeight_percent="0.4"
        app:layout_constraintWidth_percent="0.9"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/review_pic_add_ll"/>

    <TextView
        android:id="@+id/review_apply_default_tv"
        android:layout_width="0dp"
        android:layout_height="52dp"
        android:text="등록하기"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:layout_marginBottom="20dp"
        android:gravity="center"
        android:background="@drawable/round_style_gray200"
        app:layout_constraintWidth_percent="0.9"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/review_apply_tv"
        android:layout_width="0dp"
        android:layout_height="52dp"
        android:visibility="gone"
        android:text="등록하기"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:layout_marginBottom="20dp"
        android:gravity="center"
        android:background="@drawable/round_style_apply"
        app:layout_constraintWidth_percent="0.9"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>