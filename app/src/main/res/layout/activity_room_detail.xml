<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="@android:color/white">


    <ImageView
        android:id="@+id/back_btn"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:src="@drawable/arrow_left"
        app:layout_constraintTop_toTopOf="@id/tvToolbarTitle"
        app:layout_constraintStart_toStartOf="@id/vpRoom"
        />

    <TextView
        android:id="@+id/tvToolbarTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="객실 상세"
        android:textSize="16sp"
        android:fontFamily="@font/pretendard_semibold"
        android:gravity="center"
        android:textColor="#282828"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintWidth_percent="0.9"
        android:layout_marginTop="20dp" />


    <!-- 기존 ImageView 블록 통째로 교체 -->
    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/vpRoom"
        android:layout_width="0dp"
        android:layout_height="240dp"
        android:clipToPadding="false"
        android:paddingStart="0dp"
        android:paddingEnd="0dp"
        app:layout_constraintTop_toBottomOf="@id/tvToolbarTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintWidth_percent="0.9"
        android:layout_marginTop="32dp" />

    <TextView
        android:id="@+id/pagerCounter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingHorizontal="8dp"
        android:paddingVertical="4dp"
        android:text="1 | 5"
        android:textColor="@android:color/white"
        android:textSize="12sp"
        android:background="@drawable/bg_pager_counter"
        app:layout_constraintBottom_toBottomOf="@id/vpRoom"
        app:layout_constraintEnd_toEndOf="@id/vpRoom"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"/>



    <TextView
        android:id="@+id/tvRoomName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="남자도미토리 4인"
        android:textSize="18sp"
        android:fontFamily="@font/pretendard_semibold"
        android:textColor="#000000"
        app:layout_constraintTop_toBottomOf="@id/vpRoom"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintWidth_percent="0.9"
        android:layout_marginTop="16dp"/>


    <LinearLayout
        android:id="@+id/tvPeopleInfo_box"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="@id/tvRoomName"
        app:layout_constraintTop_toBottomOf="@id/tvRoomName"
        android:layout_marginTop="8dp"
        app:layout_constraintWidth_percent="0.9">
        
        <ImageView
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:src="@drawable/profile"
            android:layout_gravity="bottom"
            android:layout_marginBottom="2dp"
            />

        <TextView
            android:id="@+id/tvPeopleInfo1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="3dp"
            android:text="기준인원 4인"
            android:textColor="#282828"
            android:fontFamily="@font/pretendard_regular"
            android:textSize="14sp"
            android:layout_marginTop="8dp"/>
        <TextView
            android:id="@+id/tvPeopleInfo2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="(정원 8인)"
            android:layout_marginStart="4dp"
            android:fontFamily="@font/pretendard_regular"
            android:textColor="#A8A8A8"
            android:textSize="14sp"
            android:layout_marginTop="8dp"/>

    </LinearLayout>


    <LinearLayout
        android:id="@+id/tvCheckInOut"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintWidth_percent="0.9"
        app:layout_constraintTop_toBottomOf="@id/tvPeopleInfo_box"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp">

        <ImageView
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:src="@drawable/clock"
            app:layout_constraintEnd_toStartOf="@id/tvPrice"
            app:layout_constraintTop_toTopOf="@id/tvPrice"
            android:layout_gravity="bottom"
            />

        <TextView
            android:id="@+id/tvCheckInOut_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="체크인 17:00 - 체크아웃 11:00"
            android:fontFamily="@font/pretendard_regular"
            android:textColor="#282828"
            android:textSize="12sp"
            android:layout_marginStart="3dp"
            app:layout_constraintTop_toBottomOf="@id/tvPeopleInfo_box"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintWidth_percent="0.9"
            android:layout_marginTop="4dp"/>

    </LinearLayout>


    <TextView
        android:id="@+id/tvPrice"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="28,000원"
        android:textSize="20sp"
        android:fontFamily="@font/pretendard_semibold"
        android:gravity="end"
        app:layout_constraintTop_toTopOf="@id/tvCheckInOut"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintWidth_percent="0.9"
        android:layout_marginTop="0dp"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/ReservationInfo"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tvPrice"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="20dp"
        app:layout_constraintWidth_percent="0.9">

        <LinearLayout
            android:id="@+id/date_change_bar"
            android:layout_width="185dp"
            android:layout_height="44dp"
            android:background="@drawable/round_style_search_result_empty"
            android:gravity="center_vertical"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginStart="10dp"
                android:src="@drawable/calendar_check" />

            <TextView
                android:id="@+id/start_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="6.18 수"
                android:textSize="12sp"
                android:fontFamily="@font/pretendard_regular"
                />

            <TextView
                android:id="@+id/to"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="-"
                android:textSize="12sp"
                android:fontFamily="@font/pretendard_regular"
                />

            <TextView
                android:id="@+id/end_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="6.19 목"
                android:textSize="12sp"
                android:fontFamily="@font/pretendard_regular"
                />

            <TextView
                android:id="@+id/date_comma"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:text=","
                android:textSize="12sp"
                android:visibility="visible"
                android:fontFamily="@font/pretendard_regular"
                />

            <TextView
                android:id="@+id/date_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:text="1박"
                android:textSize="12sp"
                android:fontFamily="@font/pretendard_regular"
                />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/count_change_bar"
            android:layout_width="135dp"
            android:layout_height="44dp"
            android:background="@drawable/round_style_search_result_empty"
            android:gravity="center_vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginStart="10dp"
                android:src="@drawable/bottom_nav_my" />

            <TextView
                android:id="@+id/adult_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:text="성인 1"
                android:textSize="12sp"
                android:fontFamily="@font/pretendard_regular"
                />

            <TextView
                android:id="@+id/count_comma"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:text=","
                android:textSize="12sp"
                android:visibility="gone"
                android:fontFamily="@font/pretendard_regular"
                />

            <TextView
                android:id="@+id/child_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:text="아동 1"
                android:textSize="12sp"
                android:fontFamily="@font/pretendard_regular"
                />
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>






    <TextView
        android:id="@+id/tvBasicInfo"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="기본 정보"
        android:textStyle="bold"
        android:textSize="16sp"
        android:fontFamily="@font/pretendard_regular"
        app:layout_constraintTop_toBottomOf="@id/ReservationInfo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintWidth_percent="0.9"
        android:layout_marginTop="24dp"/>


    <TextView
        android:id="@+id/tvBasicDesc"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="최대 1인 예약 가능한 객실로 인원 추가 시, 인원 추가 비용 결제가 아닌 신규 예약 생성 필요합니다."
        android:textSize="14sp"
        android:textColor="#444444"
        android:fontFamily="@font/pretendard_regular"
        app:layout_constraintTop_toBottomOf="@id/tvBasicInfo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintWidth_percent="0.9"
        android:layout_marginTop="8dp"/>


    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnReserve"
        android:layout_width="328dp"
        android:layout_height="52dp"
        android:background="@drawable/btn_reserve_background"
        android:text="예약하기"
        android:textColor="@android:color/white"
        android:fontFamily="@font/pretendard_regular"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintWidth_percent="0.9"
        android:layout_marginBottom="20dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>
