<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="455dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/reviewCard"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:elevation="2dp"
        android:padding="12dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintWidth_percent="0.9"
        app:layout_constraintTop_toTopOf="parent">

        <!-- 너가 준 LinearLayout 내용 그대로 ↓ -->

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- 닉네임 + 날짜 -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/userInfoBox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvNickname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24dp"
                    android:text="제주숨숨이"
                    android:fontFamily="@font/pretendard_semibold"
                    android:textSize="14sp"
                    android:textColor="#000000"/>

                <!-- 여기부터 묶어서 가로 정렬 -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="2dp">

                    <TextView
                        android:id="@+id/tvRoomInfo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="여자도미토리 4인"
                        android:fontFamily="@font/pretendard_regular"
                        android:textSize="12sp"
                        android:textColor="#A8A8A8" />

                    <LinearLayout
                        android:id="@+id/starContainer"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"/>
                </LinearLayout>
            </LinearLayout>


            <TextView
                android:id="@+id/tvDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="50dp"
                android:text="2025.07.26"
                android:fontFamily="@font/pretendard_regular"
                android:textSize="12sp"
                android:textColor="#C1C1C1"
                android:layout_marginEnd="4dp"/>
        </RelativeLayout>

        <!-- 별점 -->
        <LinearLayout
            android:id="@+id/ratingStars"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="8dp">

            <!-- 별 5개를 코드에서 동적으로 추가해도 되고, 아래처럼 고정해도 됨 -->
        </LinearLayout>

        <!-- 이미지 리스트 (RecyclerView or HorizontalScrollView) -->
        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:scrollbars="none">

            <LinearLayout
                android:id="@+id/imageContainer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <!-- 이미지 아이템 예시 -->
                <ImageView
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:scaleType="centerCrop"
                    android:layout_marginEnd="8dp"
                    android:src="@drawable/reviewhouse_1" />

                <ImageView
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:scaleType="centerCrop"
                    android:layout_marginEnd="8dp"
                    android:src="@drawable/reviewhouse_2" />

                <ImageView
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:scaleType="centerCrop"
                    android:layout_marginEnd="8dp"
                    android:src="@drawable/reviewhouse_2" />
            </LinearLayout>
        </HorizontalScrollView>

        <!-- 내용 -->
        <TextView
            android:id="@+id/tvContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="일단 게스트하우스라는 인식 때문인지 기대를 안하고 갔는데 방을 들어가자마자 깨끗하고 오션뷰라서 너무 놀랐습니다. 이 가격에 이런곳이??라는 생각부터 들었고요.
바로 앞에 같이 운영하는 카페도 있는데 너무 예쁘게 잘 나오고 신경도 잘 써주시더라고요. 너무 잘 즐기다가 돌아왔습니다."
            android:textSize="14sp"
            android:fontFamily="@font/pretendard_regular"
            android:textColor="#424242"
            android:lineSpacingExtra="4dp" />

    </LinearLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>