<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    android:id="@+id/search_result_all_cl"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/search_result_arrow_left_iv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:src="@drawable/arrow_left"
        app:layout_constraintBottom_toBottomOf="@+id/search_result_search_bar"
        app:layout_constraintEnd_toStartOf="@+id/search_result_search_bar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/search_result_search_bar"
        app:layout_constraintWidth_percent="0.1" />
    <LinearLayout
        android:id="@+id/search_result_search_bar"
        android:layout_width="0dp"
        android:layout_height="48dp"
        app:layout_constraintWidth_percent="0.65"
        android:orientation="horizontal"
        android:background="@drawable/round_style_search_result"
        android:clickable="true"
        android:focusable="true"
        android:fitsSystemWindows="true"
        android:gravity="center_vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <TextView
            android:id="@+id/search_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="지역, 숙소명으로 검색해보세요"
            android:textColor="@color/gray200"
            android:textSize="14sp"
            android:layout_marginStart="16dp" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/search_result_adjustments_ll"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/search_result_circle"
        android:layout_marginStart="10dp"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="@+id/search_result_search_bar"
        app:layout_constraintStart_toEndOf="@id/search_result_search_bar"
        app:layout_constraintTop_toTopOf="@id/search_result_search_bar">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/adjustments"
            app:layout_constraintBottom_toBottomOf="@+id/search_result_search_bar"
            app:layout_constraintStart_toEndOf="@id/search_result_search_bar"
            app:layout_constraintTop_toTopOf="@id/search_result_search_bar"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/search_result_specific"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintHeight_percent="0.06"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:weightSum="10"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@+id/search_result_search_bar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="5"
            android:background="@drawable/round_style_search_result_empty"
            android:gravity="center_vertical">
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginStart="10dp"
                android:src="@drawable/calendar_check"/>
            <TextView
                android:id="@+id/start_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="6.18 수"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/to"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="-"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/end_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="6.19 목"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/date_comma"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:text=","
                android:visibility="gone"
                android:textSize="12sp"/>

            <TextView
                android:id="@+id/date_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:text="1박"
                android:textSize="12sp" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="4.5"
            android:layout_marginStart="10dp"
            android:background="@drawable/round_style_search_result_empty"
            android:gravity="center_vertical">
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginStart="10dp"
                android:src="@drawable/bottom_nav_my"/>
            <TextView
                android:id="@+id/adult_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:text="성인 1"
                android:textSize="12sp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:text=","
                android:visibility="gone"
                android:textSize="12sp"/>
            <TextView
                android:id="@+id/child_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:text="아동 1"
                android:textSize="12sp"/>
        </LinearLayout>
    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/search_result_rv"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:paddingTop="8dp"
        android:paddingHorizontal="12dp"
        app:layout_constraintTop_toBottomOf="@id/search_result_specific"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:clipToPadding="false"
        android:overScrollMode="always" />

</androidx.constraintlayout.widget.ConstraintLayout>